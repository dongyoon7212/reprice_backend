<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.reprice_backend.mapper.ChatRoomMapper">

    <resultMap id="ChatRoomResultMap" type="com.example.reprice_backend.entity.ChatRoom">
        <id property="chatRoomId" column="chat_room_id" />
        <result property="productId" column="product_id" />
        <result property="sellerId" column="seller_id" />
        <result property="buyerId" column="buyer_id" />
        <result property="status" column="status" />
        <result property="lastMessageDt" column="last_message_dt" />
        <result property="createDt" column="create_dt" />
    </resultMap>

    <resultMap id="ChatRoomListRespResultMap" type="com.example.reprice_backend.dto.chat.ChatRoomListRespDto">
        <id property="chatRoomId" column="chat_room_id" />
        <result property="productId" column="product_id" />
        <result property="title" column="title" />
        <result property="imageUrl" column="image_url" />
        <result property="sellerId" column="seller_id" />
        <result property="sellerDisplayName" column="seller_display_name" />
        <result property="buyerId" column="buyer_id" />
        <result property="buyerDisplayName" column="buyer_display_name" />
        <result property="status" column="status" />
        <result property="lastMessageContent" column="last_message_content" />
        <result property="lastMessageDt" column="last_message_dt" />
        <result property="createDt" column="create_dt" />
    </resultMap>

    <insert id="addChatRoom" useGeneratedKeys="true" keyProperty="chatRoomId">
        insert into
            chat_room_tb
        values (
            0,
            #{productId},
            #{sellerId},
            #{buyerId},
            #{status},
            #{lastMessageDt},
            #{createDt}
        );
    </insert>

    <select id="getChatRoomById" resultMap="ChatRoomResultMap">
        select
            *
        from
            chat_room_tb
        where
            chat_room_id = #{chatRoomId};
    </select>

    <select id="getChatRoomByParticipants" resultMap="ChatRoomResultMap">
        select
            *
        from
            chat_room_tb
        where
            product_id = #{productId}
            and seller_id = #{sellerId}
            and buyer_id = #{buyerId};
    </select>

    <select id="getChatRoomsByUserId" resultMap="ChatRoomListRespResultMap">
        select
            *
        from
            chat_room_tb crt
        join
            product_tb pt on (crt.product_id = pt.product_id)
            user_tb ut on (crt.user_id = ut.user_id)
            chat_message_tb cmt on (crt.chat_room_id = cmt.chat_room_id)
        where
            seller_id = #{userId}
            or buyer_id = #{userId}
        order by
            last_message_dt desc;
    </select>

    <update id="updateLastMessageDt">
        update
            chat_room_tb
        set
            last_message_dt = now()
        where
            chat_room_id = #{chatRoomId};
    </update>
</mapper>
